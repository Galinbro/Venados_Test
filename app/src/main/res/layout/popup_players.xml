<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:gravity="center_horizontal"
              android:background="@color/green"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:text="FICHA TECNICA"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:textColor="@color/white"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:paddingTop="1dp"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_centerInParent="true"
            android:src="@color/green" android:layout_gravity="center"/>
    <TextView
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtName"/>
    <TextView
            android:text="TextView"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtPos"/>
    <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="FECHA DE NACIMIENTO"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView5"/>
        <TextView
                android:text="TextView"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtBir"/>
        <TextView
                android:text="LUGAR DE NACIMIENTO"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView11"/>
        <TextView
                android:text="TextView"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtPlace"/>
        <TextView
                android:text="PESO"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView12"/>
        <TextView
                android:text="TextView"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtW"/>
        <TextView
                android:text="ALTURA"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView13"/>
        <TextView
                android:text="TextView"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtH"/>
        <TextView
                android:text="EQUIPO ANTERIOR"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView14"/>
        <TextView
                android:text="TextView"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="33dp" android:id="@+id/txtLT"/>
    </LinearLayout>
</LinearLayout>


